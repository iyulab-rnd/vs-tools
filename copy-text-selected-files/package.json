{
  "name": "copy-text-selected-files",
  "displayName": "Copy Text of Selected Files",
  "description": "Copies the contents of the selected files to the clipboard.",
  "publisher": "iyulab",
  "repository": {
    "type": "git",
    "url": "https://github.com/iyulab-rnd/vs-tools"
  },
  "icon": "logo_128.png",
  "version": "1.0.9",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Other"],
  "keywords": ["development", "code", "copy", "clipboard", "text", "utilities", "explorer"],
  "activationEvents": [
    "onCommand:copy-text-selected-files.copyFilesContent"
  ],  
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "copy-text-selected-files.copyFilesContent"
        }
      ]
    },
    "commands": [
      {
        "command": "copy-text-selected-files.copyFilesContent",
        "title": "Copy Content of Selected Files",
        "category": "Explorer"
      }
    ],
    "keybindings": [
      {
        "command": "copy-text-selected-files.copyFilesContent",
        "key": "ctrl+alt+c",
        "when": "explorerViewletVisible || editorTextFocus"
      }
    ]    
  },  
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}